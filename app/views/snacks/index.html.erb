

<div class="row card">
  <div class="small-12 columns">
    <h1>Kitchen Snack Central</h1>
    <p>These are the snacks we keep in the company kitchen. Enjoy!</p>
    <span>Don't see anything you like?</span>
    <%= link_to "Request a New Snack", new_snack_path %>
    <hr>
    <table class="responsive">
      <thead>
        <tr>
          <th>Snack Name</th>
          <th>Time to next refill</th>
          <th>Calories</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @snacks.each do |snack| %>
          <tr>
            <td><%= link_to snack.name, edit_snack_path(snack) %></td>
            <td><%= snack.remaining_days %> (of <%= snack.restock_frequency_days %>)</td>
            <td><%= snack.calories %></td>
            <td><%= snack.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>